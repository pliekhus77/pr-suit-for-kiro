{
  "name": "agentic-reviewer",
  "displayName": "Agentic Reviewer",
  "description": "Framework-based guidance for Amazon Kiro",
  "version": "0.1.0",
  "publisher": "pragmatic-rhino",
  "author": "Patrick Liekhus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pragmatic-rhino/agentic-reviewer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kiro",
    "framework",
    "steering",
    "best-practices",
    "tdd",
    "bdd",
    "architecture"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [
    "workspaceContains:.kiro/"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentic-reviewer.browseFrameworks",
        "title": "Browse Frameworks",
        "category": "Agentic Reviewer",
        "icon": "$(library)"
      },
      {
        "command": "agentic-reviewer.installFramework",
        "title": "Install Framework",
        "category": "Agentic Reviewer",
        "icon": "$(cloud-download)"
      },
      {
        "command": "agentic-reviewer.updateFramework",
        "title": "Update Framework",
        "category": "Agentic Reviewer",
        "icon": "$(sync)"
      },
      {
        "command": "agentic-reviewer.updateAllFrameworks",
        "title": "Update All Frameworks",
        "category": "Agentic Reviewer",
        "icon": "$(sync-ignored)"
      },
      {
        "command": "agentic-reviewer.removeFramework",
        "title": "Remove Framework",
        "category": "Agentic Reviewer",
        "icon": "$(trash)"
      },
      {
        "command": "agentic-reviewer.createCustomSteering",
        "title": "Create Custom Steering",
        "category": "Agentic Reviewer",
        "icon": "$(new-file)"
      },
      {
        "command": "agentic-reviewer.validateSteering",
        "title": "Validate Steering Document",
        "category": "Agentic Reviewer",
        "icon": "$(check)"
      },
      {
        "command": "agentic-reviewer.renameCustomSteering",
        "title": "Rename",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.deleteCustomSteering",
        "title": "Delete",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.exportCustomSteering",
        "title": "Export to Library",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.initializeWorkspace",
        "title": "Initialize Workspace",
        "category": "Agentic Reviewer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "agentic-reviewer.searchFrameworks",
        "title": "Search Frameworks",
        "category": "Agentic Reviewer",
        "icon": "$(search)"
      },
      {
        "command": "agentic-reviewer.viewFrameworkReference",
        "title": "View Framework Reference",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.initializeFrameworksDirectory",
        "title": "Initialize Frameworks Directory",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.refreshSteeringTree",
        "title": "Refresh",
        "category": "Agentic Reviewer",
        "icon": "$(refresh)"
      },
      {
        "command": "agentic-reviewer.openSteeringDocument",
        "title": "Open",
        "category": "Agentic Reviewer"
      },
      {
        "command": "agentic-reviewer.revealSteeringDocument",
        "title": "Reveal in File Explorer",
        "category": "Agentic Reviewer"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "agenticReviewer.steeringTree",
          "name": "Framework Steering",
          "when": "agenticReviewer.activated"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "agenticReviewer.steeringTree",
        "contents": "No framework steering documents found.\n[Browse Frameworks](command:agentic-reviewer.browseFrameworks)\n[Initialize Workspace](command:agentic-reviewer.initializeWorkspace)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agentic-reviewer.refreshSteeringTree",
          "when": "view == agenticReviewer.steeringTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "agentic-reviewer.openSteeringDocument",
          "when": "view == agenticReviewer.steeringTree && viewItem =~ /^steering(Strategy|Project|Custom)$/",
          "group": "navigation@1"
        },
        {
          "command": "agentic-reviewer.revealSteeringDocument",
          "when": "view == agenticReviewer.steeringTree && viewItem =~ /^steering(Strategy|Project|Custom)$/",
          "group": "navigation@2"
        },
        {
          "command": "agentic-reviewer.updateFramework",
          "when": "view == agenticReviewer.steeringTree && viewItem == steeringStrategy",
          "group": "framework@1"
        },
        {
          "command": "agentic-reviewer.removeFramework",
          "when": "view == agenticReviewer.steeringTree && viewItem == steeringStrategy",
          "group": "framework@2"
        },
        {
          "command": "agentic-reviewer.renameCustomSteering",
          "when": "view == agenticReviewer.steeringTree && viewItem == steeringCustom",
          "group": "custom@1"
        },
        {
          "command": "agentic-reviewer.deleteCustomSteering",
          "when": "view == agenticReviewer.steeringTree && viewItem == steeringCustom",
          "group": "custom@2"
        },
        {
          "command": "agentic-reviewer.exportCustomSteering",
          "when": "view == agenticReviewer.steeringTree && viewItem == steeringCustom",
          "group": "custom@3"
        }
      ],
      "commandPalette": [
        {
          "command": "agentic-reviewer.refreshSteeringTree",
          "when": "false"
        },
        {
          "command": "agentic-reviewer.openSteeringDocument",
          "when": "false"
        },
        {
          "command": "agentic-reviewer.revealSteeringDocument",
          "when": "false"
        },
        {
          "command": "agentic-reviewer.renameCustomSteering",
          "when": "false"
        },
        {
          "command": "agentic-reviewer.deleteCustomSteering",
          "when": "false"
        },
        {
          "command": "agentic-reviewer.exportCustomSteering",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {}
}
